{% block _owner_profile_locations_widget %}
    {# <p>Ajouter ici vos addresses :</p> #}
    {{ form_widget(form) }}
    <div class="from-group">
        <input type="hidden" id="locations-counter" value="0">
        <button type="button" id="add-location" class="btn btn-primary">Ajouter une adresse</button>
    </div>
{% endblock %}
{% block _owner_profile_locations_entry_row %}
   {{ form_widget(form)}}
{% endblock %}
{% block _owner_profile_locations_entry_widget %}
   <div class="form-group" id="block_{{id}}">
         
        <div class="row mb-2">
            <div class="col">
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            <div class="col">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger" title="Supprimer cette adresse"><i class="fas fa-trash-alt"></i></button>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col">
                {{ form_errors(form.firstLine) }}
                {{ form_widget(form.firstLine)}}
                
            </div>
        </div>
        <div class="row mb-2">
            <div class="col">
                {{ form_errors(form.secondLine) }}
                {{ form_widget(form.secondLine)}}
            </div>
        </div>
        <div class="row mb-2">
            <div class="col">
                {{ form_errors(form.postalCode) }}
                {{ form_widget(form.postalCode) }}
                
            </div>
            <div class="col">
                {{ form_errors(form.city) }}
                {{ form_widget(form.city) }}
                
            </div>
            
        </div>
        <div class="row mb-2">
            <div class="col">{{ form_widget(form.lat) }}</div>
            <div class="col">{{ form_widget(form.lng) }}</div>
        </div>
          
   </div>
{% endblock %}