{% block javascript %}

     {{ parent() }}

    <script>
    let checkbox = document.getElementById("owner_profile_companyRelated");
    let champ = document.getElementById("company");
    
    function isChecked () {
        if (checkbox.checked){
            champ.style.display = "block";
        } else {
            champ.style.display = "none";
        }
    }

    isChecked();

    checkbox.addEventListener("change", function () {
    if (this.checked) {
        champ.style.cssText = "display: block !important;"; 
    }
    else {
        champ.style.cssText = "display: none !important;"; 
    }
    });
    </script>

