{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="container">
    <h2 class="mt-5 mb-4 text-secondary"><i class="fas fa-user-lock"></i>&nbsp;&nbsp;Connectez-vous !</h2>

    <div class="row mt-3 pt-3">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            {% if hasError %}
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&#9888;</button>
                    Une erreur est survenue, l'email ou le mot de passe est invalide <br/>
                </div> 
            {% endif %}
            
            <div class="alert alert-light py-3 px-3">
                <form action=" {{ path('account.login') }} " method="POST">
                    <div class="form-group mt-3">
                        <label for="email">Email</label>
                        <input type="email" name="_username" id="email" class="form-control" placeholder="Adresse email ..." required value="{{username}}">
                    </div>
                    <div class="form-group pt-3">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe ...">
                    </div>
                    <div class="form-group mt-5 text-center">
                        <a href="{{ path('request_resetting') }}">Mot de passe oubli√© ?</a>
                    </div>
                    <div class="form-group mt-5">
                        <button type="submit" class="btn btn-success btn-center"><i class="fas fa-check"></i>&nbsp;&nbsp;Connexion</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3">&nbsp;</div>
    </div>

</div>


{% endblock %}
