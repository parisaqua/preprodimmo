{% extends 'base.html.twig' %}

{% block title %}Mon profile{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-5 mb-4"><i class="fas fa-user"></i>&nbsp;&nbsp;Mon profile</h1>
        <div class="row">
            <div class="col-md-6">
            <h4 class="text-center">Mes informations</h4>
                {% include 'account/_user.card.html.twig' %}
            </div>
            <div class="col-md-6">
            <h4 class="text-center">Mon patrimoine</h4>
            </div>
        </div>
        <div class="row pt-4">
            <div class="col-md-1"></div>
            <a href="{% if app.user.profile %}{{ path('profile.edit', {id: user.profile.id}) }} {% else %}{{ path('profile.new') }}{% endif %}" class="btn btn-info col-md-3 btn-center mt-2"><i class="fas fa-user-cog"></i>&nbsp;&nbsp;Modifier mon profile</a>
            <div class="col-md-2"></div>
            <a href="{{ path('account.password') }}" class="btn btn-info col-md-3 btn-center mt-2"><i class="fas fa-lock"></i>&nbsp;&nbsp;Modifier mon mot de passe</a>
            <div class="col-md-1"></div>
        </div>
    </div>

{% endblock %} 
