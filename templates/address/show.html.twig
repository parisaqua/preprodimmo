{% extends 'base.html.twig' %}

{% block title %}- Détail d'un bien{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                 <div id="map" style="width: 100%; height: 400px;" data-lat="{{address.lat}}" data-lng="{{address.lng}}"></div>
            </div>
            <div class="col-md-4">
                <h4> {{ address.firstLine }} </h4>
                <h4> {% if address.secondLine %} {{ address.secondLine }} {% endif %} </h4>
                <h6> {{ address.postalCode }} {{ address.city }} </h6>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-4 text-center">
                <a href=" {{ path('address_index') }} " class="btn btn-secondary">Retour à la liste</a>
            </div>
            <div class="col-md-4 text-center">
                <a href=" {{ path('address_edit', {id: address.id} ) }} " class="btn btn-info">Editer</a>
            </div>
            <div class="col-md-4 text-center">
                <form method="post" action="{{ path('address_delete', {id: address.id}) }}" style="display: inline-block; margin-top: 5px" onSubmit="return confirm('Etes-vous certain ?')">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id )}}">
                    <button class="btn btn-danger">Supprimer l'adresse</button>
                </form>
            </div>
         </div>
    </div>   

</div>  

{% endblock %}