{{ form_start(form, {attr: {'novalidate':'novalidate'}}) }}
    <div class="row align-items-center">
        <div class="col-md-12">{{ form_row(form.name) }}</div>
    </div>
    <div class="row align-items-end">
        <div class="col-md-7">
           
            <div class="row">
                <div class="col-md-12"> {{ form_row(form.firstLine) }}</div>
            </div>
            <div class="row">
                <div class="col-md-12"> {{ form_row(form.secondLine) }}</div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-12">{{ form_row(form.postalCode) }}</div>
            </div>
            <div class="row">
                <div class="col-md-12">{{ form_row(form.city) }}</div>
            </div>
        </div>
    </div>
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
