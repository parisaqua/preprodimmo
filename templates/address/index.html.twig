{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Address index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>FirstLine</th>
                    <th>PostalCode</th>
                    <th>City</th>
                    <th>Lat</th>
                    <th>Lng</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for address in addresses %}
                <tr>
                    <td>{{ address.id }}</td>
                    <td> {{address.name}} </td>
                    <td>{{ address.firstLine }}</td>
                    <td>{{ address.postalCode }}</td>
                    <td>{{ address.city }}</td>
                    <td>{{ address.lat }}</td>
                    <td>{{ address.lng }}</td>
                    <td>
                        <a href="{{ path('address_show', {'id': address.id}) }}">show</a>
                        <a href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('address_new') }}">Create new</a>
    </div>
{% endblock %}
