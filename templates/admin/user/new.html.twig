{% extends 'base.html.twig' %}

{% block title %}Nouvel individu{% endblock %}


{% block body %}

<div class="container">
    <h1 class="my-5">Nouvel individu !</h1>

    {{ form_start(form) }}

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col">
                        <div class="alert alert-light">
                            <div class="row align-items-center">
                                <div class="col-md-2">{{ form_row(form.gender) }}</div>
                                <div class="col-md-5">{{ form_row(form.firstName) }}</div>
                                <div class="col-md-5">{{ form_row(form.lastName) }}</div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    {{ form_row(form.email) }}
                                </div>
                                <div class="col-md-5">
                                    {{ form_row(form.roles) }}
                                </div>
                                 <div class="col-md-2">
                                    {{ form_row(form.isActive) }}
                                </div>
                            </div>
                            <hr>
                            <p class="text-center">Vous y Ãªtes presque, confirmez le nouvel individu !</p>
                            <button type="submit" class="btn btn-success btn-center"> <i class="fas fa-check"></i> Confirmer l'inscription</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>

    {{ form_end(form) }}
 
</div>

{% endblock %}